# Anchor Text Configuration
# Copy this file to .env and fill in your API keys

# Default LLM Model (uses Gemini 3 by default)
ANCHOR_TEXT_MODEL=gemini/gemini-3-pro-preview

# API Keys (only needed for the provider you're using)
# For Gemini/Google AI Studio - use GEMINI_API_KEY (preferred) or GOOGLE_API_KEY
GEMINI_API_KEY=your-gemini-api-key-here
# GOOGLE_API_KEY=your-google-api-key-here  # Alternative for Gemini

OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# For local LLMs (Ollama/LM Studio)
OLLAMA_API_BASE=http://localhost:11434

# Processing Settings
ANCHOR_TEXT_CHUNK_SIZE=3000
ANCHOR_TEXT_TEMPERATURE=0.3
ANCHOR_TEXT_MAX_RETRIES=3
